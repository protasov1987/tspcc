<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <title>Штрихкод группы карт</title>
  <style>
    body { font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; text-align: center; margin: 24px; }
    .barcode-wrapper { display: inline-flex; flex-direction: column; align-items: center; gap: 12px; }
    #barcode { width: 100%; max-width: 420px; }
    .code-text { font-size: 16px; font-weight: 600; }
  </style>
</head>
<body>
  <div class="barcode-wrapper">
    <svg id="barcode"></svg>
    <div class="code-text">Группа карт: <%= card && card.name ? escapeHtml(card.name) : '' %></div>
    <div class="code-text"><%= code || '(нет штрихкода группы)' %></div>
  </div>

  <script src="/vendor/jsbarcode/JsBarcode.all.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var code = "<%= code %>";
      if (code) {
        try {
          JsBarcode('#barcode', code, { format: 'CODE128', displayValue: false, margin: 10, height: 80 });
        } catch (err) {
          console.error('Barcode render error', err);
        }
      }
      setTimeout(function() { window.print(); }, 100);
    });
  </script>
</body>
</html>

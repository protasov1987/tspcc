<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <title>QR-код маршрутной карты</title>
  <style>
    @page { margin: 10mm; }
    body { font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; text-align: center; margin: 0; padding: 0; }
    .wrap { margin-top: 20mm; }
    .barcode-wrapper { display: inline-flex; flex-direction: column; align-items: center; gap: 10px; padding: 5mm; }
    .barcode-wrapper .barcode-svg { padding: 5mm; }
    .barcode-wrapper svg { width: 32mm; height: 32mm; display: block; }
    .code-text { font-size: 16px; font-weight: 600; }
    .name-text { font-size: 14px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="barcode-wrapper">
      <div class="barcode-svg"><%- barcodeSvg %></div>
      <div class="code-text">QR ID: <%= qrId || code || '(нет QR ID)' %></div>
      <div class="code-text">Номер МК: <%= routeCardNumber || '(нет номера МК)' %></div>
      <% if (card && card.name) { %>
        <div class="name-text"><%= escapeHtml(card.name) %></div>
      <% } %>
    </div>
  </div>
  <script>
    (function () {
      let fired = false;
      window.addEventListener('load', () => {
        if (fired) return;
        fired = true;
        setTimeout(() => window.print(), 250);
      });
      window.addEventListener('afterprint', () => {
        window.close();
      });
    })();
  </script>
</body>
</html>
